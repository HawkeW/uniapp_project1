
.main {
    margin: 20rpx;
    text-align: center;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
}
.current-week {
    margin: 120rpx auto;
}
.wrapper {
    position: relative;
    color: #000;
    /* border: 2px solid #000; */
    width: 700rpx;
    height: 550rpx;
}
.progress-bg {
    position: absolute;
    left: 80rpx;
    top: 5rpx;
    /*  border: 8upx  #707070 solid; */
    border: 8rpx #707070 solid;
    border-radius: 530rpx;
/*    border-radius: ; */
    border-bottom: 8rpx solid transparent;
    width: 265px;
    height: 530rpx;
    box-shadow: #e5e5e5;
}
.progress-bar {
    position: relative;
    width: 80px;
    height: 80px;
    border-radius: 50%;
    text-align: center;
    line-height: 80px;
    margin: 0 auto;
    margin-top: 120px;
    background: white;
}
.progress-bar ::after {
    position: absolute;
    content: '';
    background: -webkit-linear-gradient(red, yellow);
    background: linear-gradient(red, yellow);
    bottom: 0;
    right: 0;
    left: 0;
    top: 0;
    z-index: -1;
    -webkit-transform: scale(1.1);
            transform: scale(1.1);
    border-radius: 50%;
}
.progress-text {
    position: absolute;
    left: 70rpx;
    top: 140rpx;
}
.left-text {
    height: 56rpx;
    font-size: 40rpx;
    font-family: PingFang SC;
    font-weight: 400;
    line-height: 56rpx;
    color: #0D447B;
    opacity: 1;
}
.left-detail {
    width: 558rpx;
    height: 110rpx;
    padding-top: 40rpx;
    line-height: 110rpx;
    text-justify: auto;
}
.num {
    font-size: 110rpx;
    font-family: lets-go-digital;
    font-weight: 400;
    line-height: 46rpx;
    color: rgba(0, 0, 0, 1);
    opacity: 1;
}
.left-user {
    position: relative;
    bottom:130rpx;
    height: 100rpx;
    line-height: 34rpx;
}
.user-info {
    margin: 12rpx;
    color: #0D447B;
    font-size: 34rpx;
    font-family: PingFang SC;
    font-weight: 400;
    letter-spacing: 2rpx;
    opacity: 1;
}
